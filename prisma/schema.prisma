generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id        String   @id
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime
  Post      Post[]
}

model Post {
  id        String   @id
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime
  authorId  String
  Author    Author   @relation(fields: [authorId], references: [id])
}
